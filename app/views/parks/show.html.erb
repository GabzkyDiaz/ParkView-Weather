<h1 class="text-4xl font-bold mb-4"><%= @park.name %></h1>
<p class="mb-4 text-lg text-gray-700"><%= @park.description %></p>
<p class="mb-6 text-lg"><strong>Location:</strong> <%= @park.location %></p>

<h2 class="text-2xl font-semibold mb-4">Images</h2>
<ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
  <% @park.images.each do |image| %>
    <% if image.photo.attached? %>
      <li class="flex justify-center">
        <%= image_tag url_for(image.photo), class: "w-72 h-72 object-cover rounded-md shadow" %>
      </li>
    <% end %>
  <% end %>
</ul>

<h2 class="text-2xl font-semibold mb-4">Weather</h2>
<ul class="mb-6">
  <% @park.weathers.each do |weather| %>
    <li class="text-lg text-gray-600"><%= weather.date %>: <%= weather.temperature %>Â°C <%= weather.conditions %></li>
  <% end %>
</ul>

<h2 class="text-2xl font-semibold mb-4">Map</h2>
<div class="mb-6 flex justify-center">
  <%= image_tag url_for(@park.map.map_url), class: "w-96 h-72 object-cover rounded-md shadow" %>
</div>

<h2 class="text-2xl font-semibold mb-4">Activities</h2>
<ul class="mb-6">
  <% @park.activities.each do |activity| %>
    <li class="text-lg text-gray-600"><%= activity.name %></li>
  <% end %>
</ul>

<h2 class="text-2xl font-semibold mb-4">Topics</h2>
<ul class="mb-6">
  <% @park.topics.each do |topic| %>
    <li class="text-lg text-gray-600"><%= topic.name %></li>
  <% end %>
</ul>

<%= link_to 'Back', parks_path, class: "inline-block bg-gray-600 text-white py-2 px-4 rounded-md shadow mt-4 hover:bg-gray-700" %>
