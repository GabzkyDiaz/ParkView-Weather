<h1><%= @park.name %></h1>
<p><%= @park.description %></p>
<p>Location: <%= @park.location %></p>
<h2>Images</h2>
<ul>
  <% @park.images.each do |image| %>
    <li><%= image_tag image.url %></li>
  <% end %>
</ul>
<h2>Weather</h2>
<ul>
  <% @park.weathers.each do |weather| %>
    <li><%= weather.date %>: <%= weather.temperature %>Â°C, <%= weather.conditions %></li>
  <% end %>
</ul>
<h2>Map</h2>
<%= image_tag @park.map.map_url %>
<h2>Activities</h2>
<ul>
  <% @park.activities.each do |activity| %>
    <li><%= activity.name %></li>
  <% end %>
</ul>
<h2>Topics</h2>
<ul>
  <% @park.topics.each do |topic| %>
    <li><%= topic.name %></li>
  <% end %>
</ul>
